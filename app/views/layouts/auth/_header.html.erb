<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("site_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("pages.home"), root_path %></li>
        <li><%= link_to t("pages.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("users.title"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("pages.profile"), current_user %></li>
              <li><%= link_to t("pages.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("pages.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("pages.sigin"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
