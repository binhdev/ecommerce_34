<% provide(:title, t(".title")) %>
<h1><%= t(".title") %> </h1>
<div class="panel panel-default">
  <div class="panel-heading"><%= t ".title" %></div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for [:admin, @suggest_product] do |f| %>

          <div class="gravatar_edit">
            <%= image_tag @suggest_product.image %>
          </div>
          <%= f.label t ".image" %>
          <%= f.file_field :image, class: "form-control" %>

          <%= f.label t ".name" %>
          <%= f.text_field :name, class: "form-control" %>

          <%= f.label t ".description" %>
          <%= f.text_field :description, class: "form-control" %>

          <%= f.label t ".price" %>
          <%= f.text_field :price, class: "form-control" %>

          <%= f.label t ".user_name" %>
          <%= f.label @suggest_product.user.name, class: "form-control" %>

          <%= f.submit t(".add_to_products"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
