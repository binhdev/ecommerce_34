<% provide(:title, t(".title")) %>
<h1><%= t(".title") %> </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @suggest_product] do |f| %>

      <div class="gravatar_edit">
        <%= image_tag @suggest_product.image %>
      </div>
      <%= f.label t ".image" %>
      <%= f.file_field :image, class: "form-control" %>

      <%= f.label t ".name" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label t ".description" %>
      <%= f.email_field :description, class: "form-control" %>

      <%= f.label t ".price" %>
      <%= f.text_field :price, class: "form-control" %>

      <%= f.label t ".user_name" %>
      <%= f.label @suggest_product.user.name, class: "form-control" %>

      <%= f.label t(".status") %>
      <%= f.select :status, suggest_products_status, {selected: @suggest_product.status},
        {class: "form-control"} %>
      <br/>

      <%= f.submit t(".save_change"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
