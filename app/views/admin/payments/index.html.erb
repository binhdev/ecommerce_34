<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div class="panel panel-default">
  <div class="panel-heading"><%= t ".title" %></div>
    <div class="panel-body">
    <%= search_form_for [:admin, @search] do |f| %>
      <div class="row">
        <div class="col-md-6">
          <%= f.text_field :name_cont,
          placeholder: t("default.search"), class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.submit t("default.search"), class: "btn-primary form-control" %>
        </div>
      </div>
    <% end %>
    <table class="table">
      <thead class="thead-inverse">
        <tr>
          <th>#</th>
          <th><%= t(".name") %></th>
          <th><%= t(".payment_info") %></th>
          <th>#</th>
          <th>#</th>
      </tr>
      </thead>
      <tbody>
        <% @payments.each_with_index do |payment, index| %>
          <tr>
            <td><%= show_index index %></td>
            <td><%= payment.name %></td>
            <td><%= payment.payment_info %></td>
            <td>
              <%= link_to edit_admin_payment_path payment do %>
              <strong class="glyphicon glyphicon-pencil"></strong>
              <% end %>
            </td>
            <td>
              <%= link_to [:admin, payment], metdod: :delete,
                data: {confirm: t("default.you_sure")} do %>
                <strong class="glyphicon glyphicon-trash"></strong>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
