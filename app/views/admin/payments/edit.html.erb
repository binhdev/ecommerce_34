<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div class="panel panel-default">
  <div class="panel-heading"><%= t ".title" %></div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for [:admin,@payment] do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>

          <%= f.label :payment_info %>
          <%= f.text_field :payment_info, class: "form-control" %>
          <br/>
          <%= f.submit t("users.save_changes"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
