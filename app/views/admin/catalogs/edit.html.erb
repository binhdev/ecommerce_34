<% provide :title, t("admin.catalogs.update.title") %>
<h1><%= t("admin.catalogs.update.title") %></h1>
<div class="panel panel-default">
  <div class="panel-heading"><%= t ".title" %></div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for [:admin, @catalog] do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>

          <%= f.label :sort_order %>
          <%= f.text_field :sort_order, class: "form-control" %>
          <br/>
          <%= f.submit t("admin.catalogs.update.save_change"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
