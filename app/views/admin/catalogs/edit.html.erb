<% provide :title, t("admin.catalogs.update.title") %>
<h1 class="col-sm-8 col-sm-offset-4"><%= t("admin.catalogs.update.title") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @catalog] do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :sort_order %>
      <%= f.text_field :sort_order, class: "form-control" %>

      <%= f.submit t("admin.catalogs.update.save_change"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
