<% provide :title, t("admin.catalogs.create.title") %>
<h1><%= t("admin.catalogs.create.title") %></h1>
<div class="panel panel-default">
  <div class="panel-heading"><%= t ".title" %></div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_for [:admin, @catalog], html: {multipart: true} do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :sort_order %>
            <%= f.text_field :sort_order, class: "form-control", required: true %>
          </div>
          <%= f.submit t("admin.catalogs.create.create_button"),
            class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
