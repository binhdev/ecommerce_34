<% provide :title, t("admin.pages.show_users.title") %>
<h1><%= t "admin.pages.show_users.title" %></h1>
<div class="container-fluid">
  <%= search_form_for [:admin, @search] do |f| %>
    <div class="row">
      <div class="col-md-2">
        <%= f.label :name_or_email_or_address_or_phone_cont, t("default.find_by_key") %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :name_or_email_or_address_or_phone_cont, class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= f.submit t("default.search"), class: "btn-primary form-control" %>
      </div>
    </div>
  <% end %>
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>#</th>
        <th><%= t("admin.pages.show_users.avatar") %></th>
        <th><%= t("admin.pages.show_users.name") %></th>
        <th><%= t("admin.pages.show_users.email") %></th>
        <th><%= t("admin.pages.show_users.address") %></th>
        <th><%= t("admin.pages.show_users.phone") %></th>
        <th>#</th>
        <th>#</th>
    </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, index| %>
        <tr>
          <td><%= show_index index %></td>
          <td><%= gravatar_for user, size: Settings.maximum.avarta %></td>
          <td><%= link_to user.name, user %></td>
          <td><%= user.email %></td>
          <td><%= user.address %></td>
          <td><%= user.phone %></td>
          <td><%= link_to edit_admin_user_path user do %>
            <strong class="glyphicon glyphicon-pencil"></strong>
            <% end %></td>
          <td>
            <%= link_to [:admin, user], metdod: :delete,
              data: {confirm: t("default.you_sure")} do %>
              <strong class="glyphicon glyphicon-trash"></strong>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @users %>
</div>
