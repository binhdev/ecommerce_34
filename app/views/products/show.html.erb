<% provide :title, t(".title") %>
<div class="container">
  <div class="col-sm-4">
  <div class="panel panel-primary">
    <div class="panel-heading"><%= @product.name %></div>
    <div class="panel-body center"><%= image_tag @product.main_image %></div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-md-4">
          <span class="label-info"><%= t ".price" %></span>
          <span class="label-price"><%= @product.current_price %></span>
        </div>
        <div class="col-md-6 pull-right">
          <%= link_to t(".add_to_cart"), @product, class: "btn-success form-control center" %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
